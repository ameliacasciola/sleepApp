<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <RelativeLayout
            android:id="@+id/form_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/white" >

            <ImageView
                android:id="@+id/location_icon"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:paddingTop="36dp"
                android:layout_marginStart='15dp'
                android:layout_width="wrap_content"/>

            <TextView
                android:id="@+id/location"
                android:textStyle="bold"
                android:textSize="21sp"
                android:layout_toRightOf="@+id/location_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignBottom="@+id/location_icon"
                android:paddingStart="5dp"
                android:paddingTop="34dp"
                android:text="Vancouver" />

            <com.mancj.materialsearchbar.MaterialSearchBar
                app:mt_searchBarColor="@color/search_bar"
                android:id="@+id/search_bar"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_below="@+id/location"
                app:mt_speechMode="true"
                app:mt_hint="Custom hint"
                app:mt_maxSuggestionsCount="10"
                app:mt_navIconEnabled="true"
                app:mt_searchIconDrawable="@drawable/ic_outline_location_on_24px"
                app:mt_placeholder="Search"
                android:paddingStart="15dp"
                app:mt_roundedSearchBarEnabled="true"
                android:paddingEnd="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/greeting"
                android:textStyle="bold"
                android:textSize="30sp"
                android:paddingTop="10dp"
                android:paddingBottom="5dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:layout_below="@+id/search_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Welcome back, Grace!" />

            <TextView
                android:id="@+id/blurb"
                android:textSize="15sp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:layout_below="@+id/greeting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="What do you want to do today?" />

            <include  layout="@layout/weather_card" android:id="@+id/weatherCard"
                android:layout_below="@+id/blurb"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="15dp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"/>

            <TextView
                android:id="@+id/next_alarms_text"
                android:textStyle="bold"
                android:textSize="24sp"
                android:paddingStart="20dp"
                android:layout_marginRight="5dp"
                android:paddingEnd="20dp"
                android:layout_below="@+id/weatherCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Next Alarm" />

            <include  layout="@layout/next_alarm" android:id="@+id/next_alarm"
                android:layout_below="@+id/next_alarms_text"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"/>

            <TextView
                android:id="@+id/alarms_text"
                android:textStyle="bold"
                android:textSize="24sp"
                android:padding="10dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:layout_below="@+id/next_alarm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="My Alarms" />

            <android.support.v7.widget.RecyclerView
                android:layout_below="@+id/alarms_text"
                android:layout_marginTop="5dp"
                android:id="@+id/alarm_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>