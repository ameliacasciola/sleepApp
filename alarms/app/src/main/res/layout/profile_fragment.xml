<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".MainActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="253dp"
        android:background="@drawable/home"
        android:scaleType="centerCrop"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profilePicture"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="@dimen/_135sdp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/empty_pp"
        android:visibility="visible"
        app:civ_border_color="@color/colorAccent"
        app:civ_border_width="3dp" />


    <Button
        android:id="@+id/browse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_250sdp"
        android:layout_centerHorizontal="true"
        android:background="@xml/button_browse_background"
        android:foreground="?android:attr/selectableItemBackground"
        android:textColor="#535353"
        android:textSize="18sp"
        android:textStyle="bold"
        android:text="Upload" />

    <Button
        android:id="@+id/bioupdate"
        android:layout_width="112dp"
        android:layout_height="38dp"
        android:background="@xml/button_browse_background"
        android:foreground="?android:attr/selectableItemBackground"
        android:text="Update Bio"
        android:textColor="#535353"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/_363sdp"
        android:layout_marginLeft="@dimen/_220sdp"
        tools:layout_editor_absoluteX="283dp"
        tools:layout_editor_absoluteY="469dp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:id="@+id/user_bio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:textAlignment="center"
            android:textColor="#535353"
            android:textSize="@dimen/_20sdp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.552" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <EditText
        android:id="@+id/bioedit"
        android:layout_width="395dp"
        android:layout_height="55dp"
        android:layout_marginTop="@dimen/_400sdp"
        android:layout_centerHorizontal="true"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="507dp"/>


    <TextView
        android:id="@+id/biotitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_363sdp"
        android:text="BIO:"
        android:textColor="#535353"
        android:textSize="@dimen/_20sdp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_450sdp"
        android:layout_centerHorizontal="true"
        android:background="@xml/button_browse_background"
        android:foreground="?android:attr/selectableItemBackground"
        android:text="Logout"
        android:textColor="#535353"
        android:textSize="18sp"
        android:textStyle="bold" />
</RelativeLayout>