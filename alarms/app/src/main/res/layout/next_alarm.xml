<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    card_view:cardCornerRadius="20dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/nextAlarmImage"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="fitXY"
            android:background="@color/white"
            android:layout_alignParentTop="true"/>

        <TextView
            android:layout_width="match_parent"
            android:id="@+id/time"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:gravity="center_horizontal"
            android:textColor="@color/dark_gray"
            android:textStyle="bold"
            android:textSize="70dp"
            android:text="8:30"/>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/alarm_card"
            app:cardBackgroundColor="#D9ffffff"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="10dp"
            card_view:cardCornerRadius="20dp"
            android:layout_below="@id/time">

            <TextView
                style="@style/TextAppearance.AppCompat.Medium"
                android:id="@+id/alarm_description"
                android:layout_width="wrap_content"
                android:padding="15dp"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content"
                android:textSize="15dp"/>

        </android.support.v7.widget.CardView>


        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_below="@id/alarm_card"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/edit_icon"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="6dp"
                    android:layout_width="match_parent"/>

                <TextView
                    android:id="@+id/edit_button"
                    style="@style/TextAppearance.AppCompat.Medium"
                    android:textSize="10dp"
                    android:layout_width="match_parent"
                    android:layout_below="@+id/edit_icon"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="@color/emerald_green"
                    android:layout_marginLeft="16dp"
                    android:paddingTop="2dp"
                    android:layout_marginRight="6dp"
                    android:gravity="center"
                    android:text="EDIT\nALARM" />

            </RelativeLayout>

            <TextView
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="@color/gray" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/view_icon"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="6dp"
                    android:layout_marginLeft="6dp"
                    android:layout_width="match_parent"/>

                <TextView
                    android:id="@+id/view_button"
                    style="@style/TextAppearance.AppCompat.Medium"
                    android:layout_width="match_parent"
                    android:layout_below="@+id/view_icon"
                    android:textSize="10dp"
                    android:gravity="center"
                    android:layout_marginRight="6dp"
                    android:textStyle="bold"
                    android:paddingTop="2dp"
                    android:textColor="@color/gray"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:text="VIEW\nALARM" />

            </RelativeLayout>

            <TextView
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="@color/gray" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/cancel_icon"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="16dp"
                    android:layout_width="match_parent"/>
                <TextView
                    android:id="@+id/cancel_button"
                    style="@style/TextAppearance.AppCompat.Medium"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:layout_below="@+id/cancel_icon"
                    android:layout_height="wrap_content"
                    android:textSize="10dp"
                    android:textColor="@color/red"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="16dp"
                    android:paddingTop="2dp"
                    android:text="CANCEL\nALARM" />
            </RelativeLayout>

        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>