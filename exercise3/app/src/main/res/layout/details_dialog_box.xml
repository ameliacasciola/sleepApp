<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <LinearLayout
        android:id="@+id/wholewhen"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@+id/wholewhen"
            android:text="Date: "
            android:textSize="20dp" />

        <TextView
            android:id="@+id/when"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/wholewhere"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@+id/wholewhen"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Restaurant: "
            android:textSize="20dp" />

        <TextView
            android:id="@+id/where"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/wholecost"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@+id/wholewhere"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cost: $"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/howmuch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/wholetip"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@+id/wholecost"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tiptip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tip: $"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/wholepeople"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@+id/wholetip"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/people"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Number of people: "
            android:textSize="20dp" />

        <TextView
            android:id="@+id/numberpeople"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/rate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/wholepeople"
        android:layout_marginTop="17dp"
        android:text="Rating:"
        android:textSize="20dp" />

    <RatingBar
        android:id="@+id/ratingbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rate"
        android:layout_centerHorizontal="true"
        android:numStars="5"
        android:stepSize="1"
        android:isIndicator="true"/>


</RelativeLayout>